{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid" style="width:80%;">
    <h1>List of All Posts</h1>
    <div class="row justify-content-center">
        <table class="table table-striped">
            <thead>
                <td>ID</td>
                <td>Title</td>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
